<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <FrameLayout 
        android:id="@+id/fl_bookshelf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
    
    	<GridView 
		    android:id="@+id/gv_bookshelf"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:paddingLeft="15dp"
		    android:paddingRight="15dp"
		    android:verticalSpacing="15dp"
		    android:horizontalSpacing="15dp"
		    android:drawSelectorOnTop="true"
		    android:listSelector="@drawable/selector_gridview"
		    android:numColumns="3"
		    android:visibility="gone"/>
    	
    	<ProgressBar 
    	    android:id="@+id/pb_loadindicator"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_gravity="center"
    	    android:visibility="visible"
    	    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"/>
    
    </FrameLayout>
    
	<LinearLayout 
	    android:id="@+id/ll_toolbar"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="#ff000000"
	    android:orientation="horizontal">
	    
	    <ImageButton 
	        android:id="@+id/toolbar_search"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:src="@drawable/selector_search"
	        android:background="#00000000"
	        android:contentDescription="@string/search"/>
	    
	    <ImageButton 
	        android:id="@+id/toolbar_update"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:src="@drawable/selector_update"
	        android:background="#00000000"
	        android:contentDescription="@string/cover_description"/>
	    
	</LinearLayout>
	
</LinearLayout>